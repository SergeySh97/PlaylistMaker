<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cover_bottom_sheet"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/playlist_art" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="14dp">

        <TextView
            android:id="@+id/tv_playlist_name_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AdapterTrackName" />

        <TextView
            android:id="@+id/tv_tracks_count_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            style="@style/AdapterArtistName" />

    </LinearLayout>
</LinearLayout>