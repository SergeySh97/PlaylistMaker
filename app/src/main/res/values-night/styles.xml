<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_main_bt</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/black_for_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/main_bt_corner</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black_for_vectors</item>
    </style>
    <style name="SettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_layout_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_settings_tv</item>
        <item name="android:layout_marginEnd">@dimen/margin_settings_tv</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>
    <style name="SettingsTextViewTextColor">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black_for_text</item>
    </style>
    <style name="SettingsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black_for_text</item>
    </style>
</resources>