<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_main_bt</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/black_for_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/main_bt_corner</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black_for_vectors</item>
    </style>
    <style name="SettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_layout_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_settings_tv</item>
        <item name="android:layout_marginEnd">@dimen/margin_settings_tv</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>
    <style name="SettingsTextViewTextColor">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/main_background</item>
    </style>
    <style name="SettingsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="SearchEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black_for_text</item>
        <item name="android:textColorHint">@color/grey_hint_search</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/search_et_background</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:drawableStart">@drawable/search_grey</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:cursorVisible">true</item>
    </style>
    <style name="SearchClearIV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/clear_grey</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>