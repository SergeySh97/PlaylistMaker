<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/black_for_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/main_bt_corner</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black_for_vectors</item>
    </style>
    <style name="SettingsTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>
    <style name="MainLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/main_background</item>
    </style>
    <style name="SettingsLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="SearchEditText">
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black_for_text</item>
        <item name="android:textColorHint">@color/grey_hint_search</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/search_et_background</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawableStart">@drawable/search_grey</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:cursorVisible">true</item>
    </style>
    <style name="SearchClearIV">
        <item name="android:src">@drawable/clear_grey</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="SearchErrorSmileIV">
        <item name="android:src">@drawable/sad_smile_light</item>
    </style>
    <style name="SearchErrorWiFiIV">
        <item name="android:src">@drawable/no_internet_light</item>
    </style>
    <style name="AdapterTrackName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="AdapterArtistName">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grey_hint_search</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="AdapterOpen">
        <item name="android:src">@drawable/open_grey</item>
    </style>
    <style name="BackgroundTintBW">
        <item name="android:backgroundTint">@color/black_for_vectors</item>
    </style>
    <style name="BackgroundWB">
        <item name="android:background">@color/white</item>
    </style>
    <style name="TextColorBW">
        <item name="android:textColor">@color/black_for_vectors</item>
    </style>
    <style name="AdapterEllipse">
        <item name="android:src">@drawable/ellipse_grey</item>
    </style>
    <style name="TrackInfoLeft">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/grey_hint_search</item>
    </style>
    <style name="TrackInfoRight">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_for_text</item>
    </style>
</resources>